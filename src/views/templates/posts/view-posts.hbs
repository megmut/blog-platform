<div class="row">
    <div class="col-sm-12 col-md-6 pl-4">
        <h3>Posts</h3>
    </div>
    <div class="col-sm-12 col-md-6 d-flex justify-content-end pr-5">
        <p class="mr-4">Posts: {{data.postCount}}</p>
        <p class="mr-4">Published: {{data.postsPublished}}</p>
        <a href="/admin/content/posts/new">
            <button class="btn btn-md">
                <i class="far fa-plus-square"></i> New
            </button>
        </a>

    </div>

</div>

<hr>

{{#each data.posts}}
    {{> posts/post-view-single}}
{{/each}}

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        new window.wbc.PostViewer();
    });
</script>