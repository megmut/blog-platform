<div class="row">
    <div class="col-12 text-right" id="page-actions">
        <a href="/blog/{{data.page.slug}}" target="_blank"><button type="submit" class="btn btn-success mb-2 pull-left" id="btn-preview">View</button></a>
        <button type="submit" class="btn btn-primary mb-2" id="btn-save">Save</button>
        <button type="submit" class="btn btn-warning mb-2" id="btn-archive">Archive</button>
        <button type="submit" class="btn btn-danger mb-2" id="btn-delete">Delete</button>
    </div>
    <div class="col-12 mb-3">
        <form>
            <div class="form-row">
                <!-- Page Title -->
                <div class="form-group col-md-3">
                    <label for="page-title">Page Title</label>
                    <input type="text" class="form-control" id="page-title" placeholder="" value="{{data.page.name}}">
                </div>

                <!-- Page URL -->
                <div class="form-group col-md-3">
                    <label for="page-title">URL</label>
                    <input type="text" class="form-control" id="page-url" placeholder="" value="{{data.page.url}}">
                </div>

                <!-- Page Description -->
                <div class="form-group col-md-6">
                    <label for="page-description">Page Description</label>
                    <input type="text" class="form-control" id="page-description" placeholder="" value="{{data.page.description}}">
                </div>

                <!-- Page Template -->
                <div class="form-group col-md-3">
                    <label for="page-title">Template</label>
                    <input type="text" class="form-control" id="page-template" placeholder="" value="{{data.page.template}}">
                </div>

                <!-- Page Layout -->
                <div class="form-group col-md-3">
                    <label for="page-title">Layout</label>
                    <input type="text" class="form-control" id="page-layout" placeholder="" value="{{data.page.layout}}">
                </div>

                <!-- Published -->
                <div class="form-group col-md-3">
                    <div class="form-check">
                        <label class="form-check-label mb-2" for="page-published">
                            Published
                        </label>
                        <br>
                        <label class="switch">
                            <input type="checkbox" id="page-published" {{#if data.page.published}}checked{{/if}}>
                            <span class="slider round"></span>
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-12">
        <div id="froala-editor">{{{data.page.content}}}</div>
    </div>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        new window.wbc.PageEditor();
    });
</script>