{
  "name": "blog-platform",
  "version": "0.0.1",
  "description": "NodeJS, Handlebars, MongoDB/MySQL/Postgres powered light weight fast blog / website engine",
  "main": "bin/main.js",
  "scripts": {
    "start": "set NODE_ENV=production && npm run build && node build/server/main.js",
    "build": "tsc --p src/server/tsconfig.json && tsc --p src/website/ts/tsconfig.json && gulp fullBuild",
    "dev": "gulp start",
    "production": "npm run build && node bin/main.js",
    "pretest": "npm run build",
    "test": "mocha ./test/top.js",
    "deploy": "pm2 deploy ecosystem.config.js production --only nicholasmordecai.co.uk ",
    "posttest": "npm run test-coverage",
    "dev-test": "mocha ./test/top.js",
    "test-coverage": "nyc --report-dir build/website/public/coverage --reporter=lcov  mocha ./test/top.js "
  },
  "author": "Nicholas Mordecai",
  "license": "ISC",
  "dependencies": {
    "@types/jquery": "^3.3.6",
    "bcryptjs": "^2.4.3",
    "chokidar": "^2.0.3",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "csurf": "^1.9.0",
    "directory-tree": "^2.1.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-hbs": "^1.0.4",
    "fs": "0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-browserify": "^0.5.1",
    "gulp-rename": "^1.2.3",
    "gulp-sass": "^4.0.1",
    "gulp-typescript": "^4.0.2",
    "helmet": "^3.12.1",
    "hoek": "^4.2.1",
    "http": "0.0.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.5",
    "mysql": "^2.16.0",
    "node-dir": "^0.1.17",
    "nodemailer": "^4.6.7",
    "raven": "^2.6.2",
    "request": "^2.87.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
