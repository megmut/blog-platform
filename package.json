    "@types/helmet": "0.0.38",
    "@types/node": "^10.3.2",
    "@types/raven": "^2.5.1",
    "browser-sync": "^2.24.4",
    "chai": "^4.1.2",
    "concurrently": "^3.6.0",
    "gulp-nodemon": "^2.2.1",
    "gulp-sourcemaps": "^2.6.4",
    "is-html": "^1.1.0",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0"
  }
}
